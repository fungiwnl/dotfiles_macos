" General
syntax on
set nocompatible
set number	
set linebreak  
set showbreak=+++	
set textwidth=79
set showmatch	
set visualbell

" Security
set modelines=0

" Search
set hlsearch
set incsearch
set smartcase
set showmatch 
set ignorecase	

set autoindent	
set shiftwidth=4	
set smartindent	
set smarttab	
set softtabstop=4	

" Rendering
set ttyfast

" Status bar
set laststatus=2

set ruler
 
set undolevels=1000	
set backspace=indent,eol,start
